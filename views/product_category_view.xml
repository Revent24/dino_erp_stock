<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_category_form_view_dino_origin" model="ir.ui.view">
        <field name="name">product.category.form.dino.origin</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="dino_origin_type_id"/>
            </xpath>
        </field>
    </record>


    <record id="product_category_list_view_dino_inherit" model="ir.ui.view">
        <field name="name">product.category.list.dino.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="dino_origin_type_id" optional="show"/>
            </xpath>
        </field>
    </record>
    
</odoo>