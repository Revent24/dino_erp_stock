<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="dino_product_component_action" model="ir.actions.act_window">
        <field name="name">Components</field>
        <field name="res_model">dino.product.component</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new component.
            </p>
        </field>
    </record>

    <record id="dino_product_component_view_kanban" model="ir.ui.view">
        <field name="name">dino.product.component.view.kanban</field>
        <field name="model">dino.product.component</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="currency_id"/>
                <field name="id"/>
                <field name="image_128"/>
                
                <templates>
                    <t t-name="card" class="flex-row">
                        <main class="pe-2">
                            <div class="mb-1">
                                <div class="d-flex mb-0 h5">
                                    <field class="me-1" name="is_favorite" widget="boolean_favorite" nolabel="1"/>
                                    <field name="name"/>
                                </div>
                                <span t-if="record.code.value">
                                    [<field name="code"/>]
                                </span>
                            </div>
                            
                            <span>
                                Cost: <field name="cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </span>
                            
                            <div class="mt-1">
                                On Hand: <field name="qty_available"/>
                            </div>
                        </main>
                        
                        <aside>
                            <field name="image_128" widget="image" alt="Component" options="{'img_class': 'w-100 object-fit-contain'}" invisible="not image_128"/>
                        </aside>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <record id="dino_product_component_view_tree" model="ir.ui.view">
        <field name="name">dino.product.component.view.list</field>
        <field name="model">dino.product.component</field>
        <field name="arch" type="xml">
            <list string="Components">
                <field name="name"/>
                <field name="cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="qty_available"/>
            </list>
        </field>
    </record>

    <record id="dino_product_component_view_form" model="ir.ui.view">
        <field name="name">dino.product.component.view.form</field>
        <field name="model">dino.product.component</field>
        <field name="arch" type="xml">
            <form string="Component">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_boms" icon="fa-code-fork">
                            <field string="Specs" name="bom_count" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <div class="d-flex">
                                <field name="is_favorite" widget="boolean_favorite" class="me-2" nolabel="1"/> 
                                <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="Component Name"/> 
                            </div>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="qty_available"/>
                        </group>
                        <group>
                            <field name="qty_available"/>
                            <field name="parent_id" placeholder="Например: Ручка внешняя (базовая)"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page name="general" string="General Information">
                            <group name="internal_notes" string="Internal Notes">
                                <field name="description" nolabel="1" colspan="2" placeholder="This note is only for internal purposes."/>
                            </group>
                        </page>

                        <page string="Attributes" name="attributes">
                            <field name="attribute_line_ids">
                                <list string="Attributes" editable="bottom">
                                    <field name="attribute_id" 
                                           options="{'no_create_edit': True}"
                                           placeholder="Attribute Name"/>
                                    <field name="value_ids" widget="many2many_tags" 
                                           options="{'no_open': True, 'no_create_edit': True}" 
                                           context="{'default_attribute_id': attribute_id}"
                                           domain="[('attribute_id', '=', attribute_id)]"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <menuitem id="dino_product_component_menu"
              name="Components"
              parent="stock.menu_stock_inventory_control" 
              action="dino_product_component_action"
              sequence="5"/> 

    </data>
</odoo>