<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    
<record id="dino_product_component_action" model="ir.actions.act_window">
        <field name="name">Мои Компоненты</field>
        <field name="res_model">dino.product.component</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Создайте новый компонент.
            </p>
        </field>
    </record>


    <record id="dino_product_component_view_tree" model="ir.ui.view">
        <field name="name">dino.product.component.view.list</field>
        <field name="model">dino.product.component</field>
        <field name="arch" type="xml">
            <list string="Компоненты">
                <field name="name"/>
                <field name="cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="qty_available"/>
            </list>
        </field>
    </record>

<record id="dino_product_component_view_form" model="ir.ui.view">
    <field name="name">dino.product.component.view.form</field>
    <field name="model">dino.product.component</field>
    <field name="arch" type="xml">
        <form string="Компонент">
            <sheet>
                <div class="oe_button_box" name="button_box"/>
                <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                
                <div class="oe_title">
                    <h1>
                        <div class="d-flex">
                            <field name="is_favorite" widget="boolean_favorite" class="me-2" nolabel="1"/> 
                            <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="Название компонента"/>
                        </div>
                    </h1>
                </div>
                
                <group>
                    <group>
                        <field name="cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="qty_available"/>
                    </group>
                </group>
                <notebook>
                    <page name="general" string="Общая информация">
                        <p>Добавьте здесь другие поля, если нужно.</p>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>


    <menuitem id="dino_product_component_menu"
          name="Мои Компоненты"
          parent="stock.menu_stock_inventory_control" 
          action="dino_product_component_action"
          sequence="5"/>

    </data>
</odoo>