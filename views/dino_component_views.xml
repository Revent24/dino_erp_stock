<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="dino_component_action" model="ir.actions.act_window">
        <field name="name">Component Families</field>
        <field name="res_model">dino.component</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Component Family (e.g. "Screw M4").
            </p>
        </field>
    </record>

    <record id="dino_component_view_tree" model="ir.ui.view">
        <field name="name">dino.component.view.list</field>
        <field name="model">dino.component</field>
        <field name="arch" type="xml">
            <list string="Families">
                <field name="name"/>
                <field name="category_id"/>
                <field name="uom_id"/>
            </list>
        </field>
    </record>

    <record id="dino_component_view_form" model="ir.ui.view">
        <field name="name">dino.component.view.form</field>
        <field name="model">dino.component</field>
        <field name="arch" type="xml">
            <form string="Component Family">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Family Name"/>
                        <h1>
                            <div class="d-flex">
                                <field name="is_favorite" widget="boolean_favorite" class="me-2" nolabel="1"/> 
                                <field class="text-break" name="name" placeholder="e.g. Screw M4"/> 
                            </div>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="uom_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Nomenclatures / Executions" name="nomenclatures">
                            <field name="nomenclature_ids">
                                <list string="Executions">
                                    <field name="name"/>     <field name="code"/>     <field name="cost" widget="monetary"/>
                                    <field name="qty_available"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</data>
</odoo>