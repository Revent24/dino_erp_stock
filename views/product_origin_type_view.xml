<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_origin_type_view_form" model="ir.ui.view">
        <field name="name">product.origin.type.view.form</field>
        <field name="model">product.origin.type</field>
        <field name="arch" type="xml">
            <form string="Тип Происхождения">
                <sheet>
                    <group>
                        <field name="name" nolabel="1" class="oe_inline oe_text_size_full"/>
                    </group>
                    <group>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_origin_type_view_tree" model="ir.ui.view">
        <field name="name">product.origin.type.view.list</field>
        <field name="model">product.origin.type</field>
        <field name="arch" type="xml">
            <list string="Типы Происхождения" editable="bottom">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="product_origin_type_action" model="ir.actions.act_window">
        <field name="name">Типы Происхождения Dino</field>
        <field name="res_model">product.origin.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem 
        id="menu_product_origin_type" 
        name="Типы Происхождения" 
        parent="stock.menu_stock_config_settings" 
        action="product_origin_type_action" 
        sequence="10"/>

</odoo>