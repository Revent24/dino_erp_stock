<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="dino_bom_view_tree" model="ir.ui.view">
        <field name="name">dino.bom.view.list</field>
        <field name="model">dino.bom</field>
        <field name="arch" type="xml">
            <list string="BOMs">
                <field name="component_id"/>
                <field name="name"/>
                <field name="version"/>
                <field name="attribute_value_ids" widget="many2many_tags"/>
                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="True"/>
            </list>
        </field>
    </record>

    <record id="dino_bom_view_form" model="ir.ui.view">
        <field name="name">dino.bom.view.form</field>
        <field name="model">dino.bom</field>
        <field name="arch" type="xml">
            <form string="Bill of Material">
                <sheet>
                    <div class="oe_title">
                        <label for="component_id" class="oe_edit_only"/>
                        <h1><field name="component_id" placeholder="Select Component..."/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name" placeholder="e.g. BOM-001"/>
                            <field name="version"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Variant Configuration">
                            <field name="available_attribute_ids" invisible="1"/>
                            <field name="attribute_value_ids" widget="many2many_tags" 
                                   options="{'no_create': True}"
                                   placeholder="Select attributes..."/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Components" name="components">
                            <field name="line_ids">
                                <list string="Components" editable="bottom">
                                    <field name="component_id" width="30%"/>
                                    
                                    <field name="valid_attribute_ids" column_invisible="True"/>
                                    
                                    <field name="modification_ids" 
                                           widget="many2many_tags" 
                                           width="40%"
                                           placeholder="Select variants..."
                                           options="{'no_create': True}"
                                           domain="[('attribute_id', 'in', valid_attribute_ids)]"/>
                                           
                                    <field name="qty" width="10%"/>
                                    <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}" width="10%"/>
                                    <field name="currency_id" column_invisible="True"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="dino_bom_action" model="ir.actions.act_window">
        <field name="name">Specifications</field>
        <field name="res_model">dino.bom</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="dino_bom_menu"
              name="Specifications"
              parent="stock.menu_stock_inventory_control" 
              action="dino_bom_action"
              sequence="10"/> 

</data>
</odoo>